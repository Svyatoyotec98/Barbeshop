<h2> Записаться</h2>
<form action='/visit' method = "POST" role = "form">

  <script type="text/javascript">
    $(function(){
    console.log($('datetimepicker'));
    $('#color').simplecolorpicker();
    $('#datetimepicker').datetimepicker();
  });
</script>

  <div class="form-group">
    <label for="exampleInputname">Здесь Вы можете записаться к нам на стрижку</label>
      <input type="text" name = "username" class="form-control" id="exampleInputname" placeholder="Ф.И.О" value="<%= @username %>">
      </div>
    <div class="form-group">
      <label for="exampleInputphone">Ваши контакты</label>
        <input type="text" name = "phone" class="form-control" id="exampleInputphone" placeholder="Телефон" value="<%= @phone %>">
      </div>

    <div class="form-group">
        <label for="exampleInputtime">Желаемое время</label>
          <input id="datetimepicker" type="text" name = "datetime" class="form-control" placeholder="Время" value="<%= @time %>">
  </div>

<div>
  <h2> Выберите парикмахера <h2/>
    <select name="barber" class ="form-control ccc" id="exampleInputBarber">
      <option <%= @barber == 'Walter White' ? 'selected' : '' %> >Walter White</option>
      <option <%= @barber == 'Jesse Pinkman' ? 'selected' : '' %> >Jesse Pinkman</option>
      <option <%= @barber == 'Gus Fring' ? 'selected' : '' %> >Gus Fring</option>
      </select>
      </div>


    <div class="form-group">
      <label>Цвет краски: </label>
      <select id="color" name="color">
        <option value="#7bd148">Green</option>
        <option value="#5484ed">Bold blue</option>
        <option value="#a4bdfc">Blue</option>
        <option value="#46d6db">Turquoise</option>
        <option value="#7ae7bf">Light green</option>
        <option value="#51b749">Bold green</option>
        <option value="#fbd75b">Yellow</option>
        <option value="#ffb878">Orange</option>
        <option value="#ff887c">Red</option>
        <option value="#dc2127">Bold red</option>
        <option value="#dbadff">Purple</option>
        <option value="#e1e1e1">Gray</option>
    </select>
    </div>

        <button type="submit" class="btn btn-default">Записаться</button>
      </form>
